# FitonDuty March Dashboard Environment Configuration
# Copy this file to .env and customize with your settings

# Flask Environment
export FLASK_ENV=development
export SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
export DATABASE_URL=postgresql://fitonduty_march:your-password@localhost:5432/fitonduty_march

# Optional: Individual database components (if you prefer to set them separately)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=fitonduty_march
# DB_USER=fitonduty_march
# DB_PASSWORD=your-password

# Server Configuration
export HOST=0.0.0.0
export PORT=8050
export DEBUG=true

# Dashboard Settings
export DASHBOARD_TITLE="FitonDuty March Dashboard"
export DATA_REFRESH_INTERVAL=30

# Session Settings (for production)
export SESSION_COOKIE_SECURE=false